<h1>New Bulk Discount</h1>

<%= form_with url: "/merchant/#{params[:merchant_id]}/items" , method: :post, local: true do |f| %>
  <%= f.label "name" %>
  <%= f.text_field "name" %>

  <%= f.label :percentage %>
  <%= f.number_field :percentage %>

  <%= f.label :threshold %>
  <%= f.text_field :threshold %>

  <%= f.submit "Submit" %>
<% end %>